# FROM denoland/deno:alpine AS build
# WORKDIR /app
# COPY deno.json .
# COPY deno.lock .
# RUN deno install --allow-scripts
# USER deno
# COPY . .

FROM denoland/deno:alpine AS build
WORKDIR /app
COPY . .
RUN deno install --allow-scripts

FROM denoland/deno:alpine AS run
WORKDIR /app
COPY --from=build /app .
WORKDIR /app/apps/www
USER deno
ENV NODE_ENV production
EXPOSE 5173
CMD ["deno", "task", "start"]
